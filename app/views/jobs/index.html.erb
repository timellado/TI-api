<div class="container">
  <h3>Jobs corriendo en el servidor</h3>
  <div style="margin-left:auto;margin-right:auto;margin-top:auto;">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>id</th>
          <th>Nombre</th>
          <th>Descripcion</th>
          <th>Creado el</th>
          <th>Correra el</th>
        </tr>
      </thead>
      <tbody>
        <% @jobs.each do |p| %>
          <tr>
            <td>
              <%= p.id %>
            </td>
            <td>
              <%= p.name %>
            </td>
            <td>
              <%= p.comments %>
            </td>
            <td>
              <%= p.created_at.in_time_zone("Santiago").strftime('%Y/%m/%d %H:%M') %>
            </td>
            <td>
              <%= p.run_at.in_time_zone("Santiago").strftime('%Y/%m/%d %H:%M') %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

